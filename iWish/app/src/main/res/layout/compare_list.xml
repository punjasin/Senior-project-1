<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.ThemeOverlay.AppCompat.Dark"
    android:id="@+id/layout_root">

    <TextView
        android:id="@+id/list_item_compare"
        android:layout_width="225dp"
        android:layout_height="25dp"
        android:paddingLeft="5dp"
        android:textSize="14sp"
        android:textColor="@color/primary_dark_material_dark"
        android:layout_toEndOf="@+id/imageDetailCompare" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageDetailCompare"
        android:layout_alignTop="@+id/list_item_compare"
        android:layout_toEndOf="@+id/checkCompare"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkCompare"
        android:checked="false"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />


</RelativeLayout>